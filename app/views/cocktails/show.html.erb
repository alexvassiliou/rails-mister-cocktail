<div class="container">

<h1><%= @cocktail.name %></h1>

<ul>
  <% @doses.each do |dose| %>
    <li><%= link_to dose.description%> <%= dose.ingredient.name %></li>
    <%=link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</ul>
<p><%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %></p>
<%= link_to 'Delete', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>



</div>


